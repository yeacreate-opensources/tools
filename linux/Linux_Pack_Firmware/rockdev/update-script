#!enable_script
# 在升级时显示提示信息
print "\nPlease KEEP your USB cable or DC-in connected\n"
print "Do NOT remove SD card form the device\n\n"

# 升级linuxroot
write_image PACKAGE:linuxroot LINUXROOT:
check_image PACKAGE:linuxroot LINUXROOT:

# 升级boot
write_image PACKAGE:home HOME:
check_image PACKAGE:home HOME:

# 升级boot
write_image PACKAGE:boot BOOT:
check_image PACKAGE:boot BOOT:

# 升级trust
write_image PACKAGE:trust TRUST:
check_image PACKAGE:trust TRUST:

# 升级uboot
write_image PACKAGE:uboot UBOOT:
check_image PACKAGE:uboot UBOOT:

# 升级parameter
write_image PACKAGE:parameter PARAMETER:
check_image PACKAGE:parameter PARAMETER:

# 格式化数据分区
#format DATA:
#format CACHE:

# 写入命令，在bootloader启动时升级bootloader
write_blcmd update-bootloader

# 将bootloader存放到MISC分区
write_loader PACKAGE:bootloader MISC: 0xC000

# 删除升级包
delete PACKAGE:
